{
  "name": "omnifocus-claude-extension",
  "version": "2.0.0",
  "description": "Enhanced OmniFocus GTD integration for Claude Desktop with advanced features",
  "main": "build.js",
  "scripts": {
    "build": "node build-dxt-enhanced.js",
    "build:dxt": "node build-dxt-enhanced.js",
    "build:enhanced": "node build-dxt-enhanced.js",
    "build:legacy": "node build-dxt.js",
    "clean": "rm -rf dist build build-temp* extension-build",
    "rebuild": "npm run clean && npm run build",
    "test": "node test.js",
    "validate": "node validate-dxt.js",
    "dev": "node build-dxt-new.js && npm run validate",
    "release": "npm run clean && npm run build && npm run validate"
  },
  "keywords": [
    "omnifocus",
    "claude",
    "desktop",
    "extension",
    "gtd",
    "productivity",
    "task-management",
    "macos"
  ],
  "author": "Community Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/omnifocus-claude-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/omnifocus-claude-extension/issues"
  },
  "homepage": "https://github.com/yourusername/omnifocus-claude-extension#readme",
  "devDependencies": {
    "archiver": "^6.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}