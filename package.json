{
  "name": "omnifocus-claude-extension",
  "version": "1.0.0",
  "description": "OmniFocus GTD integration for Claude Desktop",
  "main": "build.js",
  "scripts": {
    "build": "node build.js",
    "build:dxt": "node build-dxt.js",
    "build:all": "node build.js && node build-dxt.js && node build-minimal.js && node build-simple.js",
    "clean": "rm -rf dist build build-temp*",
    "rebuild": "npm run clean && npm run build:all",
    "test": "node test.js",
    "validate": "node validate-dxt.js",
    "watch": "node build.js --watch",
    "release": "npm run build:all && npm run validate"
  },
  "keywords": [
    "omnifocus",
    "claude",
    "desktop",
    "extension",
    "gtd",
    "productivity",
    "task-management",
    "macos"
  ],
  "author": "Community Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/omnifocus-claude-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/omnifocus-claude-extension/issues"
  },
  "homepage": "https://github.com/yourusername/omnifocus-claude-extension#readme",
  "devDependencies": {
    "archiver": "^6.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}